@model BigImagePanel

<h3 class="nav-title">@Model.Name</h3>
<ul class="list-events row">
    <li class="col-sm-12">
        @if (Model.Image != null)
        {
            <div class="events-image">
                <img src="@Model.Image.Url" alt="@(Model.Link != null ? Model.Link.Name : "")" style="width: 100%; height: 300px">
            </div>
        }

        @if (Model.Link != null)
        {
            <div class="events-content">
                <h4 class="nav-subtitle">@Model.Link.Name</h4>
            </div>
            <a href="@Model.Link.Url"></a>
        }
    </li>
</ul>